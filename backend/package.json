{
  "name": "ai-browser-contextual-search",
  "version": "0.1.0",
  "description": "AI-powered browser for contextual search and content manipulation",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:backend\"",
    "dev:extension": "cd extension && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:extension && npm run build:backend",
    "build:extension": "cd extension && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:extension && npm run test:backend",
    "test:extension": "cd extension && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "ai",
    "browser",
    "contextual-search",
    "privacy",
    "video-analysis"
  ],
  "author": "AI Browser Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "extension",
    "backend",
    "shared"
  ],
  "engines": {
    "node": "24.x"
  }
}